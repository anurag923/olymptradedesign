table tr th{
    color: #fff;
    font-size: 10px;
    border-bottom: 1px solid #3a3737;
}
.table thead th {
    vertical-align: bottom;
    border-bottom: 1px solid #3a3737;
}
.table th tr{
    padding: .75rem;
    border-top: 0;
    border-bottom: 1px solid #3a3737;
}
.table td, .table th {
    padding: .75rem;
    vertical-align: top;
    border-top: 0px solid ;
    color: #fff;
    font-size: 10px;
    border-bottom: 1px solid #3a3737;
}
.tradebellicon{
    font-size:12px;
     color: #818181;
     cursor: pointer;
     padding-left: 1.2px;
}
.forex{
    font-size:15px;
    border: 1px solid;
    border-radius: 50%;
    width: 16%;
    margin-right: 5px;
}
tr:hover{
    background-color: #333434;
}
.platform_plus_icon{
    border: 1px solid #203143;
    background-color: #203143;
    width: 100%;
    padding: 10px 16px;
    border-radius: .75rem;
}
.platform_plus_icon i{
    font-size: 24px;
    color: rgb(236, 231, 231);
}