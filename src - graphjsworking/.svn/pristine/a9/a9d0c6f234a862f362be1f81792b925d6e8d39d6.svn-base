// aboutsection7
.about-support {
    display: grid;
    // grid-template-columns: 1fr;
    position: relative;
}
.about-support__content {
    max-width: 100%;
}
.about-support__images {
    align-items: center;
    display: flex;
    justify-content: flex-end;
}
.about-support-c-statistic {
    display: grid;
    grid-column: 1/3;
    grid-template-columns: repeat(3,1fr);
    place-items: baseline;
    width: 100%;
}
@media (min-width: 480px){
.about-support-c-statistic {
    margin: 4.0625rem 0;
}
}
.about-support-c-statistic__item {
    display: grid;
    font-family: var(--avenir-font);
    font-weight: 800;
    margin-bottom: 1.5rem;
    grid-template-columns: 1fr;
}
.about-support-c-statistic__value {
    font-size: 2rem;
    font-weight: 800;
    line-height: 3.75rem;
    color: #fff;
}
.about-support-c-statistic__description {
    color: #a5bdd9;
    font-size: 1.2rem;
    line-height: 2rem;
    max-width: 12.5rem;
    text-transform: uppercase;
}
.about-support-c-statistic__item:not(:first-child) {
    border-left: .0625rem solid #203146;
    padding-left: 15%;
}


// aboutsection5
.about-socials {
    margin-bottom: 4rem;
}
.about-socials__content{
    display: flex;
    flex-direction: row;
}
.page-m-socials-c-card {
    background-color: #172331;
    border-radius: 1.25rem;
    display: flex;
    flex-direction: column;
    margin-bottom: 1.5rem;
    // padding: 1.25rem;
    padding: 2.5rem 5.5625rem;
    width: 100%;
    margin-right: 1.25rem;
}
.page-m-socials-c-card__title {
    font-size: 1.5rem;
    font-weight: 400;
    line-height: 2.5rem;
    margin-bottom: 1rem;
}
.page-m-socials-c-card__header {
    display: flex;
}
.page-m-socials-c-card__logo {
    height: 4rem;
    margin-right: 1rem;
    width: 4rem;
}
.page-m-socials-c-card__brand-title {
    font-size: 1.3125rem;
    font-weight: 700;
    line-height: 1.75rem;
    margin-bottom: .5rem;
}
.page-m-socials-c-card .like-button_facebook {
    border: .0625rem solid #2f4765;
    width: 5rem;
}
.page-m-socials-c-card .like-button {
    align-items: center;
    border-radius: 1.5rem;
    cursor: pointer;
    display: flex;
    height: 1.5rem;
    justify-content: center;
    padding: .5rem 1rem;
    transition: background-color .2s ease-in-out,border-color .2s ease-in-out;
}
.page-m-socials-c-card .like-button__image {
    height: .625rem;
    margin-right: .5rem;
    width: .6875rem;
}
.page-m-socials-c-card .like-button__text {
    font-size: 1rem;
    line-height: 1.5rem;
}
.page-m-socials-c-card__like-counter {
    color: #5b728c;
    font-size: 1rem;
    line-height: 1.5rem;
    padding: 1.5rem 0;
}
.page-m-socials-c-card__like-counter span {
    color: #fff;
}
.like-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 23.125rem;
}
.like-list__item {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-bottom: 1rem;
    margin-right: .5rem;
}
.like-list__image {
    border-radius: .625rem;
    height: 3.5rem;
    margin-bottom: .5rem;
    width: 3.5rem;
}
.like-list__name {
    color: #5b728c;
    font-size: .75rem;
    line-height: 1rem;
    text-align: center;
}
.page-m-socials-c-card__banner {
    border-radius: .625rem;
    max-width: 100%;
}
.page-m-socials-c-card__banner {
    border-radius: .625rem;
    max-width: 100%;
    height: 205px;
}
.page-m-socials-c-card__link
{
    color: #fff;
    text-decoration: none;
}
.page-m-socials-c-card .like-button_youtube {
    background-color: #eb3223;
}
.page-m-socials-c-card .like-button__text {
    font-size: 1rem;
    line-height: 1.5rem;
}
.page-m-socials-c-card .like-button_youtube:hover {
    background-color: #ef5e52;
}
.page-m-socials-c-card .like-button_facebook:hover {
    background-color: #3079ea;
    border-color: #3079ea;
}