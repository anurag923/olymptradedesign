// aboutsection5
.about-charity {
    background: linear-gradient(
245.59deg,rgba(255,0,92,.4) 2.69%,rgba(173,0,255,0) 72.17%);
}
.about__columns {
    display: grid;
    position: relative;
}
.page-m-charity .about__columns_2col {
    grid-template-columns: repeat(2,1fr);
}
.text_spacer {
    margin-bottom: 2rem;
}
a.link {
    color:#0094ff;
    line-height: 1.625rem;
    transition: color .2s ease-out;
}
.about-labels-list {
    align-items: center;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    margin-top: 5rem;
    opacity: .5;
}
.about-labels-list__item {
    margin-bottom: 1.75rem;
    margin-right: 1.5rem;
}
.about-charity__images {
    display: flex;
    padding: 0;
    align-items: center;  
    flex-direction: column;
    justify-content: center;
    margin-bottom: 5rem;
}
.fade-in-section.is-visible {
    opacity: 1;
    position: relative;
    transform: none;
    visibility: visible;
    z-index: 10;
    transition: opacity .2s ease-out,transform .6s ease-out;
    will-change: opacity,visibility;
}

