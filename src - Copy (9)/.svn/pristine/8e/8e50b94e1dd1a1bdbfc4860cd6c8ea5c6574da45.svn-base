.container-fluid{
       align-items: center;
        box-sizing: border-box;
        display: flex;
        height: 100%;
        margin: 0 auto;
        // padding: 1rem 2.5rem;
}
.about-p-intro{
    background-image: url('../../assets/images/about-intro-bg.png');
    background-repeat: no-repeat;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    font-family: 'Roboto', sans-serif;
    position: relative;
}
body{
    font-family: 'Roboto', sans-serif;
}


.about-olymp {
    display: flex;
    margin: 0;
    position: absolute;
    top: 0;
    left: -28px;
}
.about-olymp__item {
    padding: 1.5rem 0;
}
a.about-olymp__link_active {
    color: #0094ff !important;
}
a.about-olymp__link.about-olymp__link_active:hover {
    color: #0094ff !important;
}

.about-olymp__link {
    color: #a5bdd9;
    font-size: 14px;
    font-weight: 800;
    line-height: 1.5;
    margin-right: 1rem;
    transition: color .2s;
    font-family: 'Roboto', sans-serif;
    text-decoration: none;
}
.about__content {
    align-items: center;
    display: flex;
    padding-top: 5.875rem;
    width: 95%;
}
.about__title {
    // max-width: 55%;
    position: relative;
    z-index: 2;
    color: #fff;
    font-size: 4rem;
    font-weight: 600;
    line-height: 5.625rem;
}
.about__image{
    max-width: 100%;
    position: relative;
    right: unset;
    z-index: 1;
}
.about__image img{
    max-width: 65%;
    position: relative;
    right: unset;
    z-index: 1;
    margin: auto;
    text-align: center;
}
.text {
    color: #a5bdd9;
    font-family: var(--main-font);
    font-size: 1.25rem;
    line-height: 2.125rem;
}
.page-m-intro__description {
    max-width: 43.75rem;
}


// aboutpage-section2
.page__section {
    margin-bottom: 9.375rem;
    margin-top: 9.375rem;
}
.about_statistics__list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%;
}
.about_statistics__card:first-child, .about_statistics__card:nth-child(3) {
    border-right: .0625rem solid #203146;
    padding-bottom: 1.5rem;
    padding-left: 0;
    padding-right: 0;
}

.about_statistics__card:first-child, .about_statistics__card:nth-child(2) {
    border-bottom: .0625rem solid #203146;
}
@media (min-width: 1440px){
.about_statistics__card {
    padding: 3.75rem 5rem;
}
}
.about_statistics__card {
    // padding: 1.5rem 1rem;
    text-align: left;
    width: 50%;
}
.about_statistics__card-title {
    font-size: 2.25rem;
    line-height: 3.75rem;
    margin-bottom: 1rem;
    color: #fff;
    font-weight: 800;
}
.about_statistics__card-description {
    font-size: 1rem;
    line-height: 2rem;
    color: #a5bdd9;
    font-weight: 800;;
    max-width: 20.625rem;
    text-transform: uppercase;
}
.about-oly-num{
    font-size: 2.75rem;
    font-weight: 600;
}


// aboutsection3
.about-countries {
    background-image: url('../../assets/images/bg-countries-ful.png');
    // background-color: #000;
    // background-position: 100% 0;
    background-repeat: no-repeat;
    // background-size: cover;
    color: #fff;
    background-size: cover;
    width: 100%;
    padding-bottom: 6.25rem;
    padding-top: 6.25rem;
    background-position: 103% 0;
    // background-size: 125%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    font-family: "Roboto", sans-serif;
    position: relative;
    // padding-bottom: 2.25rem;
}

.about-countries__description {
    margin-left: 50%;
    margin-top: 15%;
    min-width: 32.375rem;
    margin-bottom: 10%;
    display: flex;
    flex-direction: column;
}
.about-countries__title {
    font-size: 3rem;
    line-height: 4rem;
    margin-bottom: 1rem;
    font-weight: 900;
    text-transform: lowercase
}
.about-countries__description-text {
    font-size: 1.25rem;
    line-height: 2rem;
    max-width: 28.75rem;
}
.about-countries-list {
    grid-row-gap: 20px;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
}
.about-countries-list__item {
    align-items: center;
    background-repeat: no-repeat;
    color: #a5bdd9;
    display: flex;
    font-size: 1rem;
    height: 1.5rem;
    padding: .75rem;
}
.about-countries-list__label {
    padding-left: 1.625rem;
    visibility: visible;
    width: auto;
    display: flex;
}